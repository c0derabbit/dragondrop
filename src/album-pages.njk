---
pagination:
  data: albums
  size: 1
  alias: album
permalink: "{{ album.slug }}/"
layout: base.11ty.js
---

<a href="/">Back</a>

<h1>{{ album.title }}</h1>

<p>{{ album.description }}</p>

<div class="grid gap-6 lg:gap-10 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
  {% for photo in album.photos %}
    <img data-src="/photos/{{ album.slug }}/{{ photo }}" />
  {% endfor %}
</div>
